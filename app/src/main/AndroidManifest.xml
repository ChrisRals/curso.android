<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="christian.cursoandroid" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".opciones"
            android:label="@string/title_activity_opciones" >
        </activity>
        <activity
            android:name=".historia"
            android:label="@string/title_activity_historia" >
        </activity>
        <activity
            android:name=".videos"
            android:label="@string/title_activity_videos" >
        </activity>
        <activity
            android:name=".colores"
            android:label="@string/title_activity_colores" >
        </activity>
    </application>
    <!-- INI AGREGADO -->
    <!-- Otorgamos permisos de Internet a nuestra App -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- FIN AGREGADO -->

    <activity
        android:name=".activity_opciones"
        android:parentActivityName=".MainActivity" />
    <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".MainActivity" />


</manifest>
