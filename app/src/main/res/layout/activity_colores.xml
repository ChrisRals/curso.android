<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="christian.cursoandroid.colores"
    android:background="#ddfffe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estos son algunos de los cÃ³digos de colores que se utilizan"
        android:id="@+id/textView"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/textView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="80dp"
            android:transitionGroup="true"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp">

            <Button
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:text="RED       #F44336"
            android:layout_margin="1dp"
            android:id="@+id/button"
            android:elevation="95dp"
            android:gravity="center"
                android:background="#F44336" />

            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="PINK    #e91e63"
                android:layout_margin="1dp"
                android:id="@+id/button1"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#e91e63" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="PURPLE   #9c27b0"
                android:layout_margin="1dp"
                android:id="@+id/button2"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#9c27b0" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="DEEP PURPLE  #673ab7"
                android:layout_margin="1dp"
                android:id="@+id/button3"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#673ab7" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="INDIGO #3f51b5"
                android:layout_margin="1dp"
                android:id="@+id/button5"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#3f51b5" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="BLUE #2196f3"
                android:layout_margin="1dp"
                android:id="@+id/button7"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#2196f3" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="LIGHT BLUE  #03a9f4"
                android:layout_margin="1dp"
                android:id="@+id/button8"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#03a9f4" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="CYAN   #00BCD4"
                android:layout_margin="1dp"
                android:id="@+id/button9"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#00BCD4" />
            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="TEAL  #009688"
                android:layout_margin="1dp"
                android:id="@+id/button10"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#009688" />

            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="GREEN  #4caf50"
                android:layout_margin="1dp"
                android:id="@+id/button11"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#4caf50" />

            <Button
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="LIGHT GREEN  #8bc34a"
                android:layout_margin="1dp"
                android:id="@+id/button12"
                android:elevation="95dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="#8bc34a" />

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
